<div class="container mt-4">
  <div class="d-flex justify-content-between">
    <h1>My lists</h1>
    <%= link_to "Create new list", new_list_path,  class: "btn btn-primary" %>
  </div>
  <ul class="mt-2">
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list)%></li>
    <% end %>
  </ul>
</div>
