<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.ctfassets.net/4mws6uyas4ta/2nY3O1wYF3h86UFwHzw4mJ/7375de9519f045314f28b1064434aa6a/KANT_03_0122.jpg);">
  <div class="container">
    <h1>Watch list</h1>
    <p>Find any movie and create your watch lists</p>
  </div>
</div>


<div class="container mt-5">
  <div class="d-flex justify-content-between">
      <h1>My Lists</h1>
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary d-flex align-items-center" %>
  </div>
  <div class="d-flex mt-4">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0, 0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list)%>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
