<div class="container mt-4 d-flex justify-content-between">
  <h1 class="fs-1"><%= @list.name %></h1>
  <%= link_to "Add movie", new_list_bookmark_path(@list), class: "btn btn-primary d-flex align-items-center" %>
</div>
<div class="container">
  <ul>
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <li><%= movie.title %> -  <%= link_to "Delete", bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end  %>
  </ul>
</div>
